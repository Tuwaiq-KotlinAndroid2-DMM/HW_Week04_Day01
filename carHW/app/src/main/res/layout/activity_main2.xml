<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textViewdetails"
        android:layout_width="363dp"
        android:layout_height="308dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/archivo_black"
        android:text="TextView"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModel1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewPrice1"
        android:layout_width="162dp"
        android:layout_height="41dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="top"
        android:text="000000"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewdetails"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textViewModel1" />

    <TextView
        android:id="@+id/textViewYear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="left"
        android:text="1990"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewbrand1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCar1"
        android:layout_width="368dp"
        android:layout_height="223dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="22dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewbrand1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewbrand1"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="left"
        android:text="TextViewtitel2"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewYear1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewModel1"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/archivo_black"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewPrice1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCar1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="91dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:text="Price :"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewPrice1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModel1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="91dp"
        android:layout_height="27dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:text="SR"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewdetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCar1" />

</androidx.constraintlayout.widget.ConstraintLayout>